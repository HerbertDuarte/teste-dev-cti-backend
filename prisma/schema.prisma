generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id      String   @id @unique
  name    String
  cpf     String   @unique
  date    DateTime
  modules Module[]
}

model Module {
  id         String   @id @unique
  name       String
  id_student String?
  students   Student? @relation(fields: [id_student], references: [id])
}

model User {
  id          String @id @unique
  displayName String
  user        String
  password    String
}
