generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id            String          @id @unique
  name          String
  username      String          @unique
  cpf           String          @unique
  date          DateTime
  StudentModule StudentModule[]
}

model Module {
  id            String          @id @unique
  name          String
  StudentModule StudentModule[]
}

model StudentModule {
  id String @id @default(uuid())

  id_module String?
  module    Module? @relation(fields: [id_module], references: [id])

  id_student String?
  student    Student? @relation(fields: [id_student], references: [id])

  score Float[]
}

model User {
  id          String @id @unique
  displayName String
  user        String @unique
  role        String
  password    String
}

model Token {
  id       String @id @unique @default(uuid())
  hash     String @unique
  username String @unique
}
